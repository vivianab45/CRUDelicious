@model Dish
@{
    ViewData["Title"]="New Post";
}
<h1 class="text-center">Add a new Dish!</h1>
<div class="container px-4">
    <form asp-action="CreateDish" asp-controller="Dish" method="Post" class="row g-3">
        <div class="col-lg-4">
            <div>
                <label asp-for="Name"> Name of Dish:</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Chef"> Chef's Name:</label>
                <input asp-for="Chef" class="form-control">
                <span asp-validation-for="Chef" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Calories"># of Calories</label>
                <input asp-for="Calories" class="form-control">
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-4">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness" class="form-control" >
            <option selected disabled value="">Choose Level of Tastiness...</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness" class="text-danger"></span>
        </div>
        <div class="col-lg-4">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="6"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
            <button class="btn btn-primary mt-4 float-end">Add Dish</button>
        </div>
    </form>
</div>